@page "/DepositRatings/{Id:int}" 
@using BusinessLogic
@using DepoQuick.Domain
@inject Session Session
@inject DepoQuickContext DepoQuickContext
@inject DepositController DepositController

<html lang="es">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no"/>
</head>
<body>
<h3>Valoraciones del depósito @_deposit.Id.</h3>
<h4>Puntuación promedio: @_deposit.GetAverageRating()</h4>
    
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Cliente</th>
            <th>Inicio de reserva</th>
            <th>Fin de reserva</th>
            <th>Estrellas</th>
            <th>Comentario</th>
        </tr>
        </thead>
        
        <tbody>
        @foreach (Reservation reservation in _deposit.Reservations)
        {
            //if (reservation.Rating != null)
            {
                <tr>
                    <td>@reservation.Client.Name</td>
                    <td>@reservation.Date.GetInitialDate().ToString("dd/MM/yyyy")</td>
                    <td>@reservation.Date.GetFinalDate().ToString("dd/MM/yyyy")</td>
                    <td>reservation.Rating.Stars</td>
                    <td>reservation.Rating.Comment</td>
                </tr>
            }
        }
        </tbody>
    </table>
    </body>
</html>

@code {
    [Parameter] public int Id { get; set; }
    
    private Deposit _deposit;
    
    
    protected override void OnParametersSet()
    {
        _deposit = DepositController.GetDeposit(Id);
    }
}