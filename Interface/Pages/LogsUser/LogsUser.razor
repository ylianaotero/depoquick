@page "/LogsUser"
@using BusinessLogic
@using DepoQuick.Domain
@inject Session Session
@inject DepoQuickContext DepoQuickContext

<html lang="es">
    <head>  
        <meta charset="utf-8"/> 
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no"/>
    </head>

    <body>
        <h3>¡Hola, @_loggedInUser.Name! Aquí puedes encontrar las acciones que ha tomado cada usuario.</h3>
    
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Nombre</th>
            <th>Acción</th>
            <th>Fecha</th>
        </tr>
        </thead>
        
        <tbody>
        @foreach (LogEntry log in _logs)
        {
            <tr>
                <td>@_userController.Get(log.UserId).Name</td>
                <td>@log.Message</td>
                <td>@log.Timestamp.ToString("dd/MM/yyyy")</td>
            </tr>
        }
        </tbody>
    </table>
    </body>
</html>

@code {
    private UserController _userController;
    private User _loggedInUser;
    private List<LogEntry> _logs;
    
    protected override void OnInitialized()
    {
        _userController = new UserController(DepoQuickContext);
        _loggedInUser = Session.ActiveUser;
        _logs = _userController.GetAllLogs(_loggedInUser);
    }
}