@page "/Promotions"
@using BusinessLogic
@using DepoQuick.Domain
@inject MemoryDataBase MemoryDataBase
@inject NavigationManager NavigationManager

<html lang="es">
    <head>  
        <meta charset="utf-8"/> 
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no"/>
    </head>

    <body>
        <h3>¡Hola, @_loggedInUser.GetName()! Aquí puedes encontrar nuestras promociones actuales.</h3>

    @if (_showAlertPromotionDeletedSuccessfully)
    {
        <div class="alert alert-success" role="alert">
            La promoción ha sido eliminada correctamente.
        </div>
    }
    @if (_showAlertPromotionDeletedUnsuccessfully)
    {
        <div class="alert alert-danger" role="alert">
            La promoción no pudo ser eliminada porque está atada a un depósito reservado.
        </div>
    }
    @if (_showAlertAboutToDeletePromotion)
    {
        <div class="alert alert-warning" role="alert">
            ¿Estás seguro de que quieres eliminar esta promoción?
            <button class="btn btn-danger" @onclick="(() => DeletePromotion())">Sí</button>
            <button class="btn btn-secondary" @onclick="HideAllAlerts">No</button>
        </div>
    }
    @if (_showAlertSomethingWentWrong)
    {
        <div class="alert alert-danger" role="alert">
            La promoción no pudo ser eliminada.
        </div>
    }
    
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Promoción</th>
            <th>Desde</th>
            <th>Hasta</th>
            <th>Descuento</th>
            <th>Depósitos a los que aplica</th>
        </tr>
        </thead>
        
        <tbody>
        @foreach (Promotion promotion in _listOfPromotions)
        {
            <tr>
                <td>@promotion.GetLabel()</td>
                <td>@promotion.GetValidityDate().GetInitialDate().ToString("dd/MM/yyyy")</td>
                <td>@promotion.GetValidityDate().GetFinalDate().ToString("dd/MM/yyyy")</td>
                <td>@(promotion.GetDiscountRate()*PercentageMultiplier)%</td>
                <td>
                    @foreach (var deposit in promotion.GetDeposits())
                    {
                        <p>@deposit.GetId() - Area @deposit.GetArea()</p>
                    }
                </td>
                @if (_loggedInUser.IsAdministrator())
                {
                    <td>
                        <div class="btn-group">
                            <button class="btn btn-danger" @onclick="(() => AttemptToDeletePromotion(promotion))">Eliminar
                                <i class="fa fa-trash"></i>
                            </button>
                            <button class="btn btn-info" @onclick="(() => GoToEditPromotionPage(promotion))">Editar 
                                <i class="fa fa-pencil"></i>
                            </button>
                        </div>
                    </td>
                }
            </tr>
        }
        </tbody>
    </table>
    
    @if (_loggedInUser.IsAdministrator())
    {
        <button class="btn btn-primary" @onclick="GoToAddPromotionPage">Crear promoción</button>
    }
    </body>
</html>

@code {
    private const double PercentageMultiplier = 100.0;
    private Controller _controller;
    private List<Promotion> _listOfPromotions;
    private User _loggedInUser;
    
    Promotion _promotionToDelete;
    
    private bool _showAlertPromotionDeletedSuccessfully;
    private bool _showAlertPromotionDeletedUnsuccessfully;
    private bool _showAlertAboutToDeletePromotion;
    private bool _showAlertSomethingWentWrong;
    
    protected override void OnInitialized()
    {
        _controller = new Controller(MemoryDataBase);
        _loggedInUser = _controller.GetActiveUser();
        
        _promotionToDelete = null;
        
        _controller.DeleteAllExpiredPromotions();
        _listOfPromotions = _controller.GetPromotions();
        HideAllAlerts();
    }
    
    private void GoToAddPromotionPage()
    {
        NavigationManager.NavigateTo("/AddPromotion");
    }

    private void AttemptToDeletePromotion(Promotion promotion)
    {
        HideAllAlerts();
        
        if (PromotionIsTiedToReservedDeposit(promotion.GetId()))
        {
            _showAlertPromotionDeletedUnsuccessfully = true;
        } else
        {
            _showAlertAboutToDeletePromotion = true;
            _promotionToDelete = promotion;
        }
    }
    
    private void DeletePromotion()
    {
        HideAllAlerts();
        
        try
        {
            int id = _promotionToDelete.GetId();
            _controller.DeletePromotion(id);
            _showAlertPromotionDeletedSuccessfully = true;
        }
        catch (Exception e)
        {
            _showAlertSomethingWentWrong = true;
        }
    }
    
    private void HideAllAlerts()
    {
        _showAlertPromotionDeletedUnsuccessfully = false;
        _showAlertPromotionDeletedSuccessfully = false;
        _showAlertAboutToDeletePromotion = false;
        _showAlertSomethingWentWrong = false;
    }
    
    private bool PromotionIsTiedToReservedDeposit(int id)
    {
        Promotion promotion = _controller.GetPromotion(id);
        List<Deposit> deposits = promotion.GetDeposits();
        foreach (Deposit deposit in deposits)
        {
            if (deposit.IsReserved())
            {
                return true;
            }
        }
        return false;
    }
    
    private void GoToEditPromotionPage(Promotion promotion)
    {
        int promotionId = promotion.GetId();
        NavigationManager.NavigateTo($"/EditPromotion/{promotionId}");
    }
}